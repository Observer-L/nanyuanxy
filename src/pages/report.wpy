      <view class="next" @tap="next" wx:if="{{currentStep < 4}}">ğŸ‘‰</view>
      <van-button
        wx:else
        square
        type="primary"
        loading="{{loading}}"
        @tap="submit"
      >
        å‘å¸ƒ
      </van-button>
