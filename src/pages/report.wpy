      position="bottom"
    >
      <van-picker columns="{{ areas }}" @change="changeAreaOrItemType" ></van-picker>
    </van-popup>

    <van-popup
      show="{{ currentShowPicker === 'itemType' }}"
      @close="togglePicker"
